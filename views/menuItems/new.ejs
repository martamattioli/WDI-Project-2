<h1>NEW MENU ITEM</h1>

<form method="POST" action="/restaurants/<%= restaurant.restaurantId %>">
  <div class="form-group">
    <label for="itemName">Item Name</label>
    <input type="text" name="itemName" id="itemName" class="form-control">
  </div>
  <div class="form-group">
    <label for="itemCategories">Item Category</label>
    <select name="itemCategories" id="itemCategories" class="form-control select2">
      <% itemCategories.forEach((itemCategory) => { %>
        <option><%= itemCategory %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="price">Price (optional)</label>
    <input type="number" name="price" id="price" class="form-control">
  </div>
  <div class="form-group">
    <label>Add Images</label>
    <input type="text" name="photos[]" class="form-control">
    <input type="text" name="photos[]" class="form-control">
    <input type="text" name="photos[]" class="form-control">
  </div>
  <div class="form-group">
    <label for="otherOptions">Other Notes</label>
    <input type="text" name="otherOptions" id="otherOptions" class="form-control" placeholder="Vegetarian, Spicy, etc.">
  </div>
  <fieldset class="form-group">
    <legend>Up or Down Vote?</legend>
    <div class="form-check">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="updownvotes" id="showUpvote" value="updownvotes">
        <input type="hidden" name="upvotes" id="upvotes" value="">
        Upvote
      </label>
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="updownvotes" id="showDownvote" value="updownvotes">
        <input type="hidden" name="downvotes" id="downvotes" value="">
        Downvote
      </label>
    </div>
  </fieldset>
  <button class="btn btn-primary">ADD NEW ITEM</button>
</form>

<a href="/restaurants/<%= restaurant.restaurantId %>">GO BACK</a>
