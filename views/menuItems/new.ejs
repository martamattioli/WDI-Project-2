<section class="main-forms row add-item-page">
  <div class="col-12">
    <form method="POST" action="/restaurants/<%= restaurant.restaurantId %>">
      <div class="form-group">
        <label for="itemName">Item Name</label>
        <input type="text" name="itemName" id="itemName" class="form-control">
      </div>
      <div class="form-group">
        <label for="itemCategory">Item Category</label>
        <select name="itemCategory" id="itemCategory" class="form-control select2">
          <% itemCategories.forEach((itemCategory) => { %>
            <option><%= itemCategory %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" class="form-control">
      </div>
      <fieldset class="form-group">
        <legend>Up or Down Vote?</legend>
        <div class="form-check">
          <label class="form-check-label">
            <input type="radio" class="form-check-input" name="updownvotes" id="showUpvote" value="updownvotes">
            <input type="hidden" name="upvotes" id="upvotes" value="">
            Upvote
          </label>
          <label class="form-check-label">
            <input type="radio" class="form-check-input" name="updownvotes" id="showDownvote" value="updownvotes">
            <input type="hidden" name="downvotes" id="downvotes" value="">
            Downvote
          </label>
        </div>
      </fieldset>
      <button class="orange-button">ADD NEW ITEM</button>
    </form>
  </div>
  <div class="col-12">
    <a href="/restaurants/<%= restaurant.restaurantId %>" class="cancel-button">CANCEL</a>
  </div>
</section>
